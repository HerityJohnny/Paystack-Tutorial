<section class="paytr_activate_container">
    {{#if errorMessage}}
    <div class="error_message_box">
        <p class="error_message">{{errorMessage}}</p>
    </div>
    {{/if}}
    <form action="/activate" method="post">
        <div class="paytr_form_wrapper">
            <label for="verify">Enter the token sent to your email address <span
                    class="paytr_hash_mail">{{hashedEmail}}</span></label><br>
            <input type="text" name="activate_k" id="verify" maxlength="6">
            <div class="activate-validator-message" aria-live="polite"></div>
        </div>
        <div class="paytr_form_wrapper">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
        </div>
        <button type="submit">Activate</button>
    </form>
    <div class="cta_user">
        <form action="/resend_activate" method="post">
            <div class="paytr_form_wrapper">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
            </div>
            <div class="paytr_form_wrapper">
                <label for="pwd">Didn't get token?</label><br>
                <button type="submit">Resend</button>
            </div>
        </form>
    </div>
</section>